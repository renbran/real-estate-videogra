# VideoPro Backend - Production Configuration Template
# Copy this file to .env.production and update with your actual values

# Database Configuration - PostgreSQL for Production
DATABASE_URL=postgresql://your-username:your-password@your-host:5432/videography_booking_prod
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_NAME=videography_booking_prod
DB_USER=your-db-username
DB_PASSWORD=your-secure-db-password

# JWT Security - CRITICAL: Generate secure keys for production
JWT_SECRET=your-super-secret-production-jwt-key-at-least-64-characters-long
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Email Configuration (Required for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@company.com
SMTP_PASS=your-email-app-password

# Server Configuration
NODE_ENV=production
PORT=3001

# CORS Configuration - Update with your frontend domain
CORS_ORIGIN=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Security Headers
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/videography-booking.log